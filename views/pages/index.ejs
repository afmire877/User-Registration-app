						<td><%= user._id %></td>
						<td><%= user.name %></td>
						<td><%= user.gender %></td>
						<td><%= d + "/" + m + "/" + y %></td>
						<td><%= user.email %></td>
						<td><%= user.class %></td>
						<td><a href="/<%= user._id %>/edit" class="btn btn-warning ">Edit</td>
						<td><a href="#" class="btn btn-danger">Delete</a></td>
s
